# ===========================================
# DRAGICA - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git!

# -------------------------------------------
# Supabase Configuration
# -------------------------------------------
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -------------------------------------------
# App Configuration
# -------------------------------------------
# Development: http://localhost:3000
# Production: https://dragica.app
NEXT_PUBLIC_APP_URL=https://dragica.app
NEXT_PUBLIC_BASE_DOMAIN=dragica.app

# -------------------------------------------
# Infobip Configuration (WhatsApp & Viber)
# -------------------------------------------
# Get these from: https://portal.infobip.com
# Leave empty to disable notifications
INFOBIP_BASE_URL=https://xxxxx.api.infobip.com
INFOBIP_API_KEY=your-api-key
INFOBIP_WHATSAPP_SENDER=your-whatsapp-number
INFOBIP_VIBER_SENDER=IBSelfServe

# -------------------------------------------
# Demo Accounts
# -------------------------------------------
# Used for one-click demo login on the login page
DEMO_ADMIN_EMAIL=demo-admin@dragica.app
DEMO_ADMIN_PASSWORD=your-random-24-char-password
DEMO_OWNER_EMAIL=demo-salon@dragica.app
DEMO_OWNER_PASSWORD=your-random-24-char-password

# -------------------------------------------
# Cron Secret (Vercel Cron)
# -------------------------------------------
# Used to authenticate the daily demo reset cron job
CRON_SECRET=your-random-32-char-secret
